# Waitlist Secret (for admin access)
WAITLIST_SECRET=your-secret-key-here

# Database Storage (Required)
# Supabase PostgreSQL for persistent storage
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-role-key-here

# Email Service (for sending confirmations)
# AWS SES (Primary - if you have AWS account)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-2
AWS_SES_FROM_EMAIL=hello@runespoke.ai

# OR SendGrid
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=hello@runespoke.ai

# OR Resend.com (free tier, 100 emails/day)
RESEND_API_KEY=
RESEND_FROM_EMAIL=hello@runespoke.ai